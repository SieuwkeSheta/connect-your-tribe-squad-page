            <tr>
                <th>Bijnaam:</th>
                <td>{{ person.nickname }}</td>
            </tr>
            <tr>
                <th>Geboortedatum:</th>
                <td>{{ person.birthdate |  date: '%B %d%q, %Y'}}</td>
            </tr>
            <tr>
                <th>Woonplaats:</th>
                <td>{{ person.residency }}</td>
            </tr>
            <tr>
                <th>Schoenmaat:</th>
                <td>{{ person.shoe_size }}</td>
            </tr>
            <tr>
                <th>Fav. kleur:</th>
                <td style="color:{{person.fav_color }};">{{ person.fav_color}}</td>
            </tr>
            <tr>
                <th>Fav. dier:</th>
                <td>{{ person.fav_animal }}</td>
            </tr>
            <tr>
                <th>Fav. seizoen:</th>
                <td>{{ person.fav_season }}</td>
            </tr>
            <tr>
                <th>Fav. emoji:</th>
                <td>{{ person.fav_emoji }}</td>
            </tr>
        </table>

        <div class="bio">
            <p>Bio</p>
            <p>{{ person.bio }}</p>
