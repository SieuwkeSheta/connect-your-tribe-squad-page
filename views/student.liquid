    {% comment %} Lijst met links naar medestudenten {% endcomment %}
    <ul>
        {% for person in persons %}
            <li><a href="/student/{{ person.id }}">{{ person.name }}</a></li>
        {% endfor %}
    </ul>

    {% comment %} Stickervel {% endcomment %}
    <form class="stickers" id="stickers">
        <fieldset>
            <legend>Stickervel</legend>
            <label>
                <input type="radio">
                <img src="/assets/smiling_face_with_3_hearts.png" alt="Smiling face with 3 hearts emoji" width="50">
            </label>
            <label>
                <input type="radio">
                <img src="/assets/nauseated_face.png" alt="Smiling clown emoji" width="50">
            </label>
            <label>
                <input type="radio">
                <img src="/assets/partying_face.png" alt="Partying face emoji" width="50">
            </label>
            <label>
                <input type="radio">
                <img src="/assets/sunglasses.png" alt="Sunglasses face emoji" width="50">
            </label>
        </fieldset>
    <form>

